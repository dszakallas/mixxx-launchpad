# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[**]
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitepace = true
max_line_length = 120

[Makefile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

