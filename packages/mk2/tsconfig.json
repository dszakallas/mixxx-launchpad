{
  "compilerOptions": {
    "composite": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "references": [
    {
      "path": "../mixxx"
    },
    {
      "path": "../app"
    }
  ],
  "include": ["controller.json", "src"]
}
